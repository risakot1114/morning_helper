  <style>
    /* ポップでCUTEなテーマのカスタムスタイル */
    body {
      font-family: 'M PLUS Rounded 1c', sans-serif;
      background: linear-gradient(135deg, #87CEEB 0%, #B0E0E6 50%, #E0F6FF 100%);
      background-attachment: fixed;
      color: #2c3e50;
      position: relative;
      overflow-x: hidden;
    }
    
    /* はっきりとした雲の形 */
    body::before {
      content: '';
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: 
        /* 大きな雲1 - 自然な雲の形 */
        radial-gradient(ellipse 100px 70px at 20% 17%, rgba(255, 255, 255, 0.98) 0%, rgba(255, 255, 255, 0.9) 30%, transparent 70%),
        radial-gradient(ellipse 80px 50px at 16% 20%, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.8) 40%, transparent 80%),
        radial-gradient(ellipse 60px 40px at 23% 20%, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.7) 50%, transparent 90%),
        
        /* 大きな雲2 - 自然な雲の形 */
        radial-gradient(ellipse 90px 65px at 75% 22%, rgba(255, 255, 255, 0.98) 0%, rgba(255, 255, 255, 0.9) 30%, transparent 70%),
        radial-gradient(ellipse 70px 45px at 72% 25%, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.8) 40%, transparent 80%),
        radial-gradient(ellipse 50px 35px at 78% 25%, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.7) 50%, transparent 90%),
        
        /* 大きな雲3 - 自然な雲の形 */
        radial-gradient(ellipse 85px 60px at 50% 9%, rgba(255, 255, 255, 0.97) 0%, rgba(255, 255, 255, 0.88) 30%, transparent 70%),
        radial-gradient(ellipse 65px 45px at 47% 12%, rgba(255, 255, 255, 0.94) 0%, rgba(255, 255, 255, 0.78) 40%, transparent 80%),
        radial-gradient(ellipse 50px 35px at 53% 12%, rgba(255, 255, 255, 0.89) 0%, rgba(255, 255, 255, 0.68) 50%, transparent 90%),
        
        /* 大きな雲4 - 自然な雲の形 */
        radial-gradient(ellipse 95px 70px at 30% 35%, rgba(255, 255, 255, 0.96) 0%, rgba(255, 255, 255, 0.87) 30%, transparent 70%),
        radial-gradient(ellipse 75px 50px at 27% 38%, rgba(255, 255, 255, 0.93) 0%, rgba(255, 255, 255, 0.77) 40%, transparent 80%),
        radial-gradient(ellipse 55px 40px at 33% 38%, rgba(255, 255, 255, 0.88) 0%, rgba(255, 255, 255, 0.67) 50%, transparent 90%),
        
        /* 大きな雲5 - 自然な雲の形 */
        radial-gradient(ellipse 90px 65px at 70% 40%, rgba(255, 255, 255, 0.97) 0%, rgba(255, 255, 255, 0.88) 30%, transparent 70%),
        radial-gradient(ellipse 70px 45px at 67% 43%, rgba(255, 255, 255, 0.94) 0%, rgba(255, 255, 255, 0.78) 40%, transparent 80%),
        radial-gradient(ellipse 50px 35px at 73% 43%, rgba(255, 255, 255, 0.89) 0%, rgba(255, 255, 255, 0.68) 50%, transparent 90%),
        
        /* 大きな雲6 - 自然な雲の形 */
        radial-gradient(ellipse 100px 75px at 10% 60%, rgba(255, 255, 255, 0.98) 0%, rgba(255, 255, 255, 0.89) 30%, transparent 70%),
        radial-gradient(ellipse 80px 55px at 7% 63%, rgba(255, 255, 255, 0.95) 0%, rgba(255, 255, 255, 0.79) 40%, transparent 80%),
        radial-gradient(ellipse 60px 45px at 13% 63%, rgba(255, 255, 255, 0.9) 0%, rgba(255, 255, 255, 0.69) 50%, transparent 90%),
        
        /* 大きな雲7 - 自然な雲の形 */
        radial-gradient(ellipse 95px 70px at 85% 65%, rgba(255, 255, 255, 0.97) 0%, rgba(255, 255, 255, 0.88) 30%, transparent 70%),
        radial-gradient(ellipse 75px 50px at 82% 68%, rgba(255, 255, 255, 0.94) 0%, rgba(255, 255, 255, 0.78) 40%, transparent 80%),
        radial-gradient(ellipse 55px 40px at 88% 68%, rgba(255, 255, 255, 0.89) 0%, rgba(255, 255, 255, 0.68) 50%, transparent 90%),
        
        /* 大きな雲8 - 自然な雲の形 */
        radial-gradient(ellipse 85px 60px at 45% 80%, rgba(255, 255, 255, 0.96) 0%, rgba(255, 255, 255, 0.87) 30%, transparent 70%),
        radial-gradient(ellipse 65px 45px at 42% 83%, rgba(255, 255, 255, 0.93) 0%, rgba(255, 255, 255, 0.77) 40%, transparent 80%),
        radial-gradient(ellipse 50px 35px at 48% 83%, rgba(255, 255, 255, 0.88) 0%, rgba(255, 255, 255, 0.67) 50%, transparent 90%);
      z-index: -1;
      pointer-events: none;
    }
    
    /* フリー素材アイコンのスタイル */
    .clothing-icon {
      width: 2rem;
      height: 2rem;
      fill: currentColor;
    }
    
    .clothing-icon-svg {
      display: inline-block;
      width: 1.6rem;
      height: 1.6rem;
      vertical-align: middle;
    }
    
    /* 星座タブのスタイル */
    .zodiac-tab {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 0.5rem 0.75rem;
      border-radius: 0.8rem 0.8rem 0 0;
      background: linear-gradient(145deg, rgba(255, 255, 255, 0.6), rgba(135, 206, 235, 0.1));
      border: 2px solid rgba(255, 255, 255, 0.4);
      border-bottom: none;
      color: #666;
      font-weight: 500;
      font-size: 0.7rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      cursor: pointer;
      min-width: 4rem;
      flex-shrink: 0;
      box-shadow: 0 -2px 8px -2px rgba(135, 206, 235, 0.1);
      position: relative;
    }

    .zodiac-tab:hover {
      background: linear-gradient(145deg, rgba(255, 255, 255, 0.8), rgba(135, 206, 235, 0.2));
      transform: translateY(-2px);
      box-shadow: 0 -4px 12px -2px rgba(135, 206, 235, 0.2);
    }

    .zodiac-tab.active {
      background: linear-gradient(145deg, rgba(70, 130, 180, 0.2), rgba(135, 206, 235, 0.3));
      color: #4682B4;
      border-color: rgba(70, 130, 180, 0.4);
      border-bottom: 2px solid rgba(70, 130, 180, 0.4);
      box-shadow:
        0 -4px 12px -2px rgba(70, 130, 180, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.8);
      z-index: 10;
    }

    .zodiac-tab.active:hover {
      transform: translateY(-2px);
      background: linear-gradient(145deg, rgba(70, 130, 180, 0.3), rgba(135, 206, 235, 0.4));
    }

    /* スクロールバーを隠す */
    .scrollbar-hide {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
    .scrollbar-hide::-webkit-scrollbar {
      display: none;
    }
    
    /* 星座選択ボタンのスタイル */
    .zodiac-btn {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 0.5rem 0.25rem;
      border-radius: 0.8rem;
      background: linear-gradient(145deg, rgba(255, 255, 255, 0.8), rgba(135, 206, 235, 0.1));
      border: 2px solid rgba(255, 255, 255, 0.6);
      color: #666;
      font-weight: 500;
      font-size: 0.75rem;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      cursor: pointer;
      min-height: 3rem;
      box-shadow: 0 2px 8px -2px rgba(135, 206, 235, 0.2);
    }

    .zodiac-btn:hover {
      transform: translateY(-1px) scale(1.02);
      background: linear-gradient(145deg, rgba(255, 255, 255, 0.9), rgba(135, 206, 235, 0.2));
      box-shadow: 0 4px 12px -2px rgba(135, 206, 235, 0.3);
    }

    .zodiac-btn.active {
      background: linear-gradient(145deg, rgba(70, 130, 180, 0.2), rgba(135, 206, 235, 0.3));
      color: #4682B4;
      border-color: rgba(70, 130, 180, 0.4);
      box-shadow:
        0 4px 12px -2px rgba(70, 130, 180, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.8);
    }

    .zodiac-btn.active:hover {
      transform: translateY(-1px) scale(1.02);
      background: linear-gradient(145deg, rgba(70, 130, 180, 0.3), rgba(135, 206, 235, 0.4));
    }
    
    /* アプリタイトルのスタイル */
    .app-title {
      font-size: 2rem; /* 携帯で見やすく */
      font-weight: 800;
      text-shadow: 0 2px 4px rgba(255, 255, 255, 0.8);
      letter-spacing: -0.02em;
    }
    
    /* カードのスタイル */
    .card {
      background: linear-gradient(145deg, rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.7));
      backdrop-filter: blur(10px);
      border-radius: 1.5rem; /* 携帯に最適化 */
      padding: 1.2rem; /* パディングを少し小さく */
      margin-bottom: 1.2rem; /* マージンを少し小さく */
      box-shadow: 
        0 8px 32px rgba(135, 206, 235, 0.2),
        inset 0 1px 0 rgba(255, 255, 255, 0.8);
      border: 1px solid rgba(255, 255, 255, 0.6);
      transform-origin: center center;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      animation: cardFloat 6s ease-in-out infinite;
    }

    .card:hover {
      transform: translateY(-8px) scale(1.02);
      box-shadow: 
        0 16px 48px rgba(135, 206, 235, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.8);
      border-color: rgba(135, 206, 235, 0.5);
    }

    .card.rotate-1 {
      transform: rotate(1deg);
      animation-delay: 0.5s;
    }

    .card.-rotate-1 {
      transform: rotate(-1deg);
      animation-delay: 1s;
    }

    .card.rotate-1:hover,
    .card.-rotate-1:hover {
      transform: translateY(-8px) scale(1.02) rotate(0deg);
    }

    @keyframes cardFloat {
      0%, 100% {
        transform: translateY(0px);
      }
      50% {
        transform: translateY(-4px);
      }
    }
    
    /* アイコンの背景 */
    .icon-bg {
      width: 3.2rem; /* 携帯に最適化 */
      height: 3.2rem;
      background: linear-gradient(145deg, rgba(255, 255, 255, 0.9), rgba(135, 206, 235, 0.2));
      border-radius: 1.2rem;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 1.6rem; /* アイコンサイズを調整 */
      box-shadow: 
        0 4px 12px rgba(135, 206, 235, 0.3),
        inset 0 1px 0 rgba(255, 255, 255, 0.8);
      border: 1px solid rgba(255, 255, 255, 0.6);
    }
    
    /* プラス記号のスタイル */
    .plus-icon {
      color: #87CEEB; /* プラス記号をスカイブルーに */
      font-size: 2rem; /* 携帯に最適化 */
      font-weight: 300;
      text-shadow: 0 2px 4px rgba(255, 255, 255, 0.8);
    }
    .advice-box {
      background: linear-gradient(135deg, rgba(135, 206, 235, 0.2), rgba(176, 224, 230, 0.1));
      color: #4682B4;
      border-radius: 0.8rem; /* 携帯に最適化 */
      padding: 0.8rem; /* パディングを小さく */
      font-weight: 500;
      border: 1px solid rgba(255, 255, 255, 0.6);
      box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.8);
      font-size: 0.875rem; /* 文字サイズを少し小さく */
    }
    .footer-nav a.active {
      color: #4682B4;
    }
    
    /* スタイル選択ボタンのスタイル */
    .style-btn {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 0.4rem 0.6rem; /* 携帯に最適化 */
      border-radius: 0.8rem;
      background: linear-gradient(145deg, rgba(255, 255, 255, 0.8), rgba(135, 206, 235, 0.1));
      border: 2px solid rgba(255, 255, 255, 0.6);
      color: #666;
      font-weight: 500;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      cursor: pointer;
      min-width: 3.5rem; /* 携帯に最適化 */
      box-shadow: 0 4px 12px -4px rgba(135, 206, 235, 0.2);
    }
    
    .style-btn:hover {
      transform: translateY(-2px) scale(1.05);
      background: linear-gradient(145deg, rgba(255, 255, 255, 0.9), rgba(135, 206, 235, 0.2));
      box-shadow: 0 6px 16px -4px rgba(135, 206, 235, 0.3);
    }
    
    .style-btn.active {
      background: linear-gradient(145deg, rgba(70, 130, 180, 0.2), rgba(135, 206, 235, 0.3));
      color: #4682B4;
      border-color: rgba(70, 130, 180, 0.4);
      box-shadow: 
        0 6px 16px -4px rgba(70, 130, 180, 0.3),
        inset 0 2px 0 rgba(255, 255, 255, 0.8);
    }
    
    .style-btn.active:hover {
      transform: translateY(-2px) scale(1.05);
      background: linear-gradient(145deg, rgba(70, 130, 180, 0.3), rgba(135, 206, 235, 0.4));
    }
    
    /* 週間ページのスタイルボタン（緑系） */
    #weekly-page .style-btn.active {
      background: linear-gradient(145deg, rgba(34, 197, 94, 0.2), rgba(16, 185, 129, 0.3));
      color: #059669;
      border-color: rgba(34, 197, 94, 0.4);
      box-shadow: 
        0 6px 16px -4px rgba(34, 197, 94, 0.3),
        inset 0 2px 0 rgba(255, 255, 255, 0.8);
    }
    
    #weekly-page .style-btn.active:hover {
      transform: translateY(-2px) scale(1.05);
      background: linear-gradient(145deg, rgba(34, 197, 94, 0.3), rgba(16, 185, 129, 0.4));
    }
    
            /* 天気アイコンの動的アニメーション */
            #weather-icon {
              filter: drop-shadow(0 4px 8px rgba(255, 182, 193, 0.4));
              transition: all 0.3s ease;
              animation: weatherFloat 3s ease-in-out infinite;
            }

            #weather-icon:hover {
              transform: scale(1.1) rotate(5deg);
              filter: drop-shadow(0 6px 12px rgba(255, 182, 193, 0.6));
            }

            /* 天気別の特別なアニメーション */
            #weather-icon.sunny {
              animation: sunnySpin 4s linear infinite;
            }

            #weather-icon.cloudy {
              animation: cloudyFloat 3s ease-in-out infinite;
            }

            #weather-icon.rainy {
              animation: rainyBounce 2s ease-in-out infinite;
            }

            #weather-icon.snowy {
              animation: snowyFall 3s ease-in-out infinite;
            }

            #weather-icon.stormy {
              animation: stormyShake 1.5s ease-in-out infinite;
            }

            /* アニメーション定義 */
            @keyframes weatherFloat {
              0%, 100% {
                transform: translateY(0px);
              }
              50% {
                transform: translateY(-8px);
              }
            }

            @keyframes sunnySpin {
              0% { 
                transform: rotate(0deg) scale(1); 
                filter: drop-shadow(0 4px 8px rgba(255, 215, 0, 0.4));
              }
              50% { 
                transform: rotate(180deg) scale(1.1); 
                filter: drop-shadow(0 6px 12px rgba(255, 215, 0, 0.6));
              }
              100% { 
                transform: rotate(360deg) scale(1); 
                filter: drop-shadow(0 4px 8px rgba(255, 215, 0, 0.4));
              }
            }

            @keyframes cloudyFloat {
              0%, 100% { 
                transform: translateY(0px) translateX(0px); 
                filter: drop-shadow(0 4px 8px rgba(192, 192, 192, 0.4));
              }
              25% { 
                transform: translateY(-5px) translateX(3px); 
                filter: drop-shadow(0 6px 10px rgba(192, 192, 192, 0.5));
              }
              50% { 
                transform: translateY(-8px) translateX(0px); 
                filter: drop-shadow(0 8px 12px rgba(192, 192, 192, 0.6));
              }
              75% { 
                transform: translateY(-5px) translateX(-3px); 
                filter: drop-shadow(0 6px 10px rgba(192, 192, 192, 0.5));
              }
            }

            @keyframes rainyBounce {
              0%, 100% { 
                transform: translateY(0px); 
                filter: drop-shadow(0 4px 8px rgba(135, 206, 235, 0.4));
              }
              50% { 
                transform: translateY(-10px); 
                filter: drop-shadow(0 8px 16px rgba(135, 206, 235, 0.6));
              }
            }

            @keyframes snowyFall {
              0%, 100% { 
                transform: translateY(0px) rotate(0deg); 
                filter: drop-shadow(0 4px 8px rgba(255, 255, 255, 0.4));
              }
              25% { 
                transform: translateY(-8px) rotate(5deg); 
                filter: drop-shadow(0 6px 12px rgba(255, 255, 255, 0.5));
              }
              50% { 
                transform: translateY(-12px) rotate(0deg); 
                filter: drop-shadow(0 8px 16px rgba(255, 255, 255, 0.6));
              }
              75% { 
                transform: translateY(-8px) rotate(-5deg); 
                filter: drop-shadow(0 6px 12px rgba(255, 255, 255, 0.5));
              }
            }

            @keyframes stormyShake {
              0%, 100% { 
                transform: translateX(0px) rotate(0deg); 
                filter: drop-shadow(0 4px 8px rgba(105, 105, 105, 0.4));
              }
              25% { 
                transform: translateX(-3px) rotate(-2deg); 
                filter: drop-shadow(0 6px 12px rgba(105, 105, 105, 0.5));
              }
              50% { 
                transform: translateX(3px) rotate(2deg); 
                filter: drop-shadow(0 8px 16px rgba(105, 105, 105, 0.6));
              }
              75% { 
                transform: translateX(-2px) rotate(-1deg); 
                filter: drop-shadow(0 6px 12px rgba(105, 105, 105, 0.5));
              }
            }

            /* ローディングアニメーション */
            .loading-spinner {
              display: inline-block;
              width: 2rem;
              height: 2rem;
              border: 3px solid rgba(135, 206, 235, 0.3);
              border-radius: 50%;
              border-top-color: #87CEEB;
              animation: spin 1s ease-in-out infinite;
            }

            @keyframes spin {
              to { transform: rotate(360deg); }
            }

            .loading-dots {
              display: inline-block;
            }

            .loading-dots::after {
              content: '';
              animation: dots 1.5s steps(4, end) infinite;
            }

            @keyframes dots {
              0%, 20% { content: ''; }
              40% { content: '.'; }
              60% { content: '..'; }
              80%, 100% { content: '...'; }
            }
    
    /* 温度の可愛いスタイル */
    #temperature {
      background: linear-gradient(135deg, rgba(255, 182, 193, 0.2), rgba(255, 255, 255, 0.8));
      border-radius: 2rem;
      padding: 1rem 1.5rem;
      box-shadow: 
        0 8px 32px rgba(255, 182, 193, 0.3),
        inset 0 2px 0 rgba(255, 255, 255, 0.9);
      border: 2px solid rgba(255, 182, 193, 0.4);
      transition: all 0.3s ease;
      animation: temperatureGlow 2s ease-in-out infinite;
    }
    
    #temperature:hover {
      transform: scale(1.05);
      box-shadow: 
        0 12px 40px rgba(255, 182, 193, 0.4),
        inset 0 2px 0 rgba(255, 255, 255, 0.9);
    }
    
    @keyframes temperatureGlow {
      0%, 100% {
        box-shadow: 
          0 8px 32px rgba(255, 182, 193, 0.3),
          inset 0 2px 0 rgba(255, 255, 255, 0.9);
      }
      50% {
        box-shadow: 
          0 8px 32px rgba(255, 182, 193, 0.5),
          inset 0 2px 0 rgba(255, 255, 255, 0.9),
          0 0 20px rgba(255, 182, 193, 0.3);
      }
    }
  </style>
  </head>
<body class="antialiased">
    <%= yield %>
